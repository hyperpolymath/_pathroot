{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@pathroot/tools",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "tasks": {
    "check": "deno check src/**/*.ts",
    "test": "deno test --allow-read --allow-write --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "build:pdf": "deno run --allow-read --allow-write scripts/build-pdf.ts",
    "validate": "deno run --allow-read --allow-env src/validate.ts"
  },
  "imports": {
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/json": "jsr:@std/json@^1",
    "@std/cli": "jsr:@std/cli@^1"
  },
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo", "no-console"]
    }
  }
}
